.zhezhao {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 80rpx;
  background: #ededed;
  overflow: hidden;
}
 
@keyframes myfirst {
  from {
    transform: translateY(-860rpx);
  }
 
  to {
    transform: translateY(80rpx);
  }
}
 
@keyframes mylast {
  from {
    transform: translateY(80rpx);
  }
 
  to {
    transform: translateY(-900rpx);
  }
}
 
.test2 {
  animation: mylast;
  animation-duration: 1s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
  width: 750rpx;
  border: 2rpx solid #ededed;
  position: absolute;
  top: 80rpx;
  left: 0;
  z-index: 1454;
}
 
.test1 {
  animation: myfirst;
  animation-duration: 0.5s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
