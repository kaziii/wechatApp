<view class="userMsgBackground">
  <view class='cardList'>
    <view class='list'>
      <text class='left' style='flex:1;'>电话号码</text>
      <input type='number' maxlength="11" class='right' placeholder="电话号码" style='flex:3;' bindinput='setPhone' value="{{phone}}"></input>
    </view>
    <view class='list'>
      <text class='left' style='flex:1;'>验证码</text>
      <input type='number' maxlength="6" placeholder="验证码" style='flex:2;' ></input>
        <button size="mini" style='flex:1;background:white;padding:0rpx;margin:0 10rpx;' disabled="{{!phone}}" bindtap='sendSms'>{{countdown}}</button>
    </view>
  </view>
</view>