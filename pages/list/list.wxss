.filter {
  display: flex;
  border-bottom: solid 1px #ededed;
  height: 80rpx;
  z-index: 9999;
  position: absolute;
  width: 100%;
  background: white;
}
.filter image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}
.filter view {
  flex: 1;
  margin: 20rpx 0;
  padding: 0 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #5d5d5d;
}
.elementary {
  display: flex;
  margin: 10rpx 0;
}

.elementary .button {
  flex: 1;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  padding: 10rpx 30rpx;
  margin: 0 20rpx;
  border: solid 1rpx #cccccc;
  color: #5d5d5d;
  border-radius: 5rpx;
}
.elementary .Occupation {
    flex: 1;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  padding: 10rpx 30rpx;
  margin: 0 20rpx;
  color: #5d5d5d;
}
.subtitle {
  margin-left: 30rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: #5d5d5d;
}
.teacherList {
  position: relative;
  top: 80rpx;
  padding: 20rpx;
}
.teacher {
  display: flex;
  border-bottom: solid 1rpx #ededed;
}
.teacher view {
  flex: 1;
  text-align: center;
}
.teacher .left image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}
.teacher .center view{
  font-size: 30rpx;
  text-align: left;
}
.teacher .center .top {
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.teacher .center .bottom {
  font-size: 20rpx;
  color: #b7b7b7;
}
.teacher .right .top {
  font-size: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: #FF9933;
}
